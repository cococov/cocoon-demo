<%= simple_form_for(@todo_list) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>
  <h3>Todo Items</h3>
  <div id="todo_items" class="mb-5">
    <%= f.simple_fields_for :todo_items do |todo_item| %>
      <%= render 'todo_item_fields', f: todo_item %>
    <% end %>
    <div class="links mt-3">
      <%= link_to_add_association 'Add Todo Item', f, :todo_items, class: "btn btn-secondary" %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
