<p style="color: green"><%= notice %></p>

<h1>Todo lists</h1>

<table id="todo_lists" class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @todo_lists.each_with_index do |todo_list, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= todo_list.name %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to "Show", todo_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New todo list", new_todo_list_path, class: "btn btn-primary" %>
